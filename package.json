{
  "name": "@lens-protocol/data-availability-verifier",
  "version": "0.0.1",
  "description": "Data availability verifier for the Lens protocol",
  "main": "lib/index.js",
  "types": "./lib/index.d.ts",
  "files": [
    "lib/**/*",
    "mocks",
    "README.md",
    "images/**/*"
  ],
  "scripts": {
    "build": "tsc --declaration",
    "start": "env-cmd -f .env ts-node src/watcher.ts",
    "start:native": "node ./lib/watcher.js",
    "generate": "graphql-codegen",
    "test": "env-cmd -f .env jest",
    "lint": "npm run prettier && npm run tsc",
    "lint:fix": "npm run prettier:fix && npm run tsc",
    "prettier:fix": "prettier --write .",
    "prettier": "prettier --check ."
  },
  "devDependencies": {
    "@graphql-codegen/cli": "2.11.3",
    "@graphql-codegen/typed-document-node": "2.3.2",
    "@graphql-codegen/typescript": "2.7.2",
    "@graphql-codegen/typescript-operations": "2.5.2",
    "@types/jest": "^29.2.6",
    "env-cmd": "^10.1.0",
    "ethereum-abi-types-generator": "^1.3.2",
    "graphql-codegen": "^0.4.0",
    "jest": "^29.4.0",
    "ts-jest": "^29.0.5",
    "typescript": "^4.6.4"
  },
  "dependencies": {
    "@bundlr-network/client": "^0.10.0",
    "@urql/core": "^3.0.5",
    "ethers": "^5.7.2",
    "graphql": "^16.6.0",
    "level": "^8.0.0",
    "node-fetch-commonjs": "^3.2.4"
  },
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git://github.com/lens-protocol/data-availability-verifier.git"
  }
}
